@page "/GETOTP"
@using System.ComponentModel.DataAnnotations

<div class="get-otp-container">
    <h1 class="form-heading">OTP Verification</h1>
    <p>Enter the OTP sent to </p>

    <EditForm Model="@otpModel" OnValidSubmit="@ProcessGetOtp">
        <DataAnnotationsValidator />
        <div class="form-group">
            <label for="email">Email:</label>
            <InputText id="email" @bind-Value="otpModel.Email" placeholder="Enter your email" />
            <ValidationMessage For="@(() => otpModel.Email)" />
        </div>
        <button type="submit" class="form-submit">Get OTP</button>
    </EditForm>
</div>

@code {
    private OtpModel otpModel = new OtpModel();

    private void ProcessGetOtp()
    {
        // Logic gửi OTP vào email tại đây
        Console.WriteLine("OTP đã được gửi tới email.");
    }

    public class OtpModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; }
    }
}
