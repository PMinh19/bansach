@using BanSach.Components.IService
@using BanSach.Components.Services
@using BanSach.Components.Model
@inject IDialogService DialogService
@inject IItemManagement ItemManagement
@rendermode InteractiveServer
<MudDialog style="width:500px">
    <TitleContent>
        <MudText Typo="Typo.h6" style="text-align:center">          
           -- Update Category! --
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Id"
                      @bind-Value="category.CategoryId" For="@(() => category.CategoryId)" ReadOnly />
        <MudTextField Label="Tên"
                      @bind-Value="category.CategoryName" For="@(() => category.CategoryName)" />
        <MudTextField Label="Ảnh" Class="mt-3"
                      @bind-Value="category.Img" For="@(() => category.Img)" />        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="updateCategory">Update</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [Parameter]
    [CascadingParameter]
    public MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public Category category { get; set; } = new Category();

    private void Cancel() => MudDialog!.Cancel();

    private void updateCategory()
    {

        MudDialog!.Close(DialogResult.Ok(category.CategoryId));
    }

}
